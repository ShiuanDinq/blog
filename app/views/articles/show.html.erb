<body class="article-page">
  <main class="article">
      <header>
        <h1><%= @article.title %><h1>
      </header>
      
      <p><%= @article.body %><p>


      <div class="button"><%= link_to "Edit" , edit_article_path(@article) %></div>
      <div class="button"><%= link_to "Delete", article_path(@article), method: :delete, data: { confirm: "Are you sure?" } %></div>
  </main>
  <div class="comment-section">
  <div class="comments">
    <h2>Comments</h2>
    <%= render @article.comments %>
  </div>
    




    <div class="add-comment-form">
      <h2>Add a comment: </h2>
      <%= render "comments/form" %>
    </div>
  </div>
  <%= link_to "Home", root_path %>
</body>