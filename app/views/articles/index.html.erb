<body>
  <nav>
    <header>The Blog</header>
    <div class="add-article-button"><%= link_to "New Article", new_article_path %></div>
  </nav>

  <main>


    <h1>Articles</h1>
    <p>Our blog has <%= Article.public_count %> articles and counting!<p>
      <ul class="articles-container ">
        <% @articles.each do |article| %>
            <% unless article.archived? %>
                <%= link_to article do %>
                  <li class="article-card pseudo-hover overflow-hidden">
                    <h2><%= article.title %></h2>
                    <p ><%= article.body %></p>
                  </li>
                <% end %>
            <% end %>
        <% end %>
      </ul>

  </main>






</body>